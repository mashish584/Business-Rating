extend layout

block content
    #content-wrapper
      +navigation()
      .companies
        .section-heading
          h2 Companies
          .search
            input(type='text', name='search', data-target='comapanies', placeholder='Search')
            button.fa.fa-search
        .business-cards
          each company in companies
            .card
              .card-image
                img(src=`./img/uploads/${company.photo}`, alt='')
              .card-content
                h2= company.name
                .stars
                  i.star-on
                  i.star-on
                  i.star-on
                  i.star-on
                  i.star-on
                  span 5+ rating
                hr
                span
                  i.fa.fa-map-marker
                  | #{company.city},#{company.state}
              .card-action
                a(href=`/company/${company._id}`)
                  | See More 
                  i.fa.fa-share
        hr
        .pagination
          a(href='') Previous
          a(href='') 1
          a(href='') 2
          a(href='') 3
          a(href='') 4
          a(href='') 5
          a(href='') 6
          a(href='') 7
          a(href='') Next


