mixin navigation(home=true,signin=false)
  nav.navbar
          .navbar-btn
            button.fa.fa-bars(data-id='open')
            button.fa.fa-times.hide(data-id='close')
          a.navbar-logo(href='/') Business Rating 
          ul.navbar_items
            if home
              +homeNav()
            else
              +normalNav(signin)