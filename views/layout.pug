  body

  //- including mixins
  include partials/_side-nav
  include partials/_navigation
  include partials/nav_items/_home-nav
  include partials/nav_items/_normal-nav

  +sideMenu()

  block content

  block footer
  // Scripts
  script(src="https://unpkg.com/axios/dist/axios.min.js")
  script(src='/js/main.js')

